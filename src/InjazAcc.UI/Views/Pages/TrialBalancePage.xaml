<Page x:Class="InjazAcc.UI.Views.Pages.TrialBalancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:InjazAcc.UI.ViewModels"
      Title="ميزان المراجعة">
<Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Text="من"/>
                <DatePicker SelectedDate="{Binding From}"/>
            </StackPanel>
            <StackPanel Margin="8,0,0,0">
                <TextBlock Text="إلى"/>
                <DatePicker SelectedDate="{Binding To}"/>
            </StackPanel>
            <Button Content="تحديث" Margin="12,18,0,0" Command="{Binding RefreshCommand}"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Rows}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="كود" Binding="{Binding Code}"/>
                <DataGridTextColumn Header="حساب" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="مدين" Binding="{Binding Debit}"/>
                <DataGridTextColumn Header="دائن" Binding="{Binding Credit}"/>
                <DataGridTextColumn Header="رصيد" Binding="{Binding Balance}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
