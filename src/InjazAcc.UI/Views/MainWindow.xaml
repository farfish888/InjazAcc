<Window x:Class="InjazAcc.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InjazAcc  النظام المحاسبي" Height="680" Width="1080"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- شريط علوي -->
    <Border Style="{StaticResource AppHeader}">
      <DockPanel LastChildFill="True">
        <TextBlock Text="InjazAcc" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,12,0" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" FlowDirection="LeftToRight" HorizontalAlignment="Right">
          <Button Content="الفواتير" Style="{StaticResource NavButton}" Click="Invoices_Click"/>
          <Button Content="إيصالات القبض" Style="{StaticResource NavButton}" Click="Receipts_Click"/>
          <Button Content="المصروفات" Style="{StaticResource NavButton}" Click="Expenses_Click"/>
          <Button Content="ميزان المراجعة" Style="{StaticResource NavButton}" Click="TrialBalance_Click"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <!-- منطقة المحتوى -->
    <Border Grid.Row="1" Style="{StaticResource Card}" Padding="0">
      <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Border>
  </Grid>
</Window>
