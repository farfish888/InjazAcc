<Window x:Class="InjazAcc.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="لوحة التحكم" Height="640" Width="980">
    <DockPanel LastChildFill="True">
        <!-- شريط علوي داخل Border حتى نستخدم Padding -->
        <Border DockPanel.Dock="Top" Background="#1A000000" Padding="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" Margin="0,0,12,0"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="الفواتير" Click="Invoices_Click"/>
                    <Button Content="ميزان المراجعة" Click="TrialBalance_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- منطقة المحتوى -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>

